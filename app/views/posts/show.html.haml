.post
  .date
    %span{:class => 'month'} 
      = @post.created_at.strftime('%b')
    %span{:class => 'day style6'} 
      = @post.created_at.day
    %span{:class => 'month'}
      = @post.created_at.strftime('%H:%M')
  %p
    %span{:class => 'title'} 
      = @post.title
    = @post.body
  -unless @post.updated_at = @post.created_at
    %p
      %sub
        %em 
          = 'Last modified' + time_lost_in_words(@post.updated_at) + 'ago.'
= link_to('&lt;&lt;Back', resource(:posts))
