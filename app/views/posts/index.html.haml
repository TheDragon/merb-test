-if @posts.empty?
  .post
    %span{:class => 'post'} No Posts Found.

-@posts.each do |post|
  .post
    .date
      %span{:class => 'month'} 
        = post.created_at.strftime('%b')
      %span{:class => 'day style6'} 
        = post.created_at.day
    %p
      %span{:class => 'title'} 
        = link_to post.title, resource(post)
      = post.body
    -unless post.updated_at = post.created_at
      %p
        %sub
          %em 
            = 'Last modified' + time_lost_in_words(post.updated_at) + 'ago'
